@page
@model Song_Bibliothek.Pages.Songs.CreateModel
@{
}


<br>
<h2>New Song</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> 
    </div>
}

<form method="POST" enctype="multipart/form-data">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">MP3-File</label>
        <div class="col-sm-6">
            <input type="file" class="form-control" name="file" accept=".mp3" required>
        </div>
    </div>
    
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Lyrics</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lyrics" value="@Model.songInfo.lyrics">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-em-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class=" btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>